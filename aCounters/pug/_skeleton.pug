		meta( name='theme-color', content='#313233' )

		link( rel='stylesheet', href='css/style.css' )

	body
		.page
			block page

		//- Service worker
		script.
			if ( 'serviceWorker' in navigator ) {
				window.addEventListener( 'load', function() {
					navigator.serviceWorker.register( '/serviceWorker.js', { scope: '/aCounters' } ).then(
						function( registration ) {
							console.warn( 'ServiceWorker registration successful with scope: ', registration.scope ); // Registration was successful
						},
						function( error ) {
							console.warn( 'ServiceWorker registration failed: ', error ); // Registration failed
						}
					);
				});
			}

		script( src='js/aUtil.js' )
		script( src='js/aCounter.js' )
		script( src='js/aProgressCircle.js' )
		script( src='js/aCountdown.js' )
		script( src='js/script.js' )
